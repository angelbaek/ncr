<?xml version="1.0" encoding="utf-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.training.ncr.mapper.user.GroupMapper">

    <select id="callTeamCode" resultType="TeamCodeVO">
        select
        *
        from "TC_TEAMCODE"
    </select>

    <update id="callUserUpdate">
        UPDATE "TN_USER"
        SET "TR_USER_GRP" = #{tr_user_grp},
            "TEAM_CD" = #{team_cd},
            "TR_USER_STATE" = 1
        WHERE "TR_USER_ID" = #{tr_user_id}
    </update>

    <select id="callTraining" resultType="MgmtVO">
        select
            *
        from "TN_TRAIN_MGMT"
        where "TR_NUM" = #{tr_num}
    </select>

    <select id="getUserInfo" resultType="UserVO">
        select
        *
        from "TN_USER"
        where "TR_USER_ID" = #{id}
    </select>

    <!--해당 팀에 몇명 있는지 가져오기-->
    <select id="getGrpCountByGrp" resultType="int">
        SELECT
        count("TEAM_CD")
        FROM
        "TN_USER"
        WHERE
        "TR_USER_GRP" = #{tr_user_grp}
    </select>

    <!--내가 훈련중인지 가져오기-->
    <select id="getTrUserStateByUserid" resultType="MgmtVO">
        SELECT "TR_MGMT_STATE"
        FROM "TN_TRAIN_MGMT"
    </select>

    <!--해당 차시 훈련여부-->
    <select id="getTrainingState" resultType="int">
        SELECT
            "TR_MGMT_STATE"
        FROM
            "TN_TRAIN_MGMT"
        WHERE
            "TR_NUM" = #{num}
    </select>

    <!--활성화된 문제그룹이 있는지 가져오기-->
    <select id="getTrainingStateActiveOn" resultType="int">
        SELECT
            "TR_MGMT_STATE"
        FROM
            "TN_TRAIN_MGMT"
        WHERE
        "TR_MGMT_STATE" = 1
    </select>

    <!--현재 훈련자의 훈련진행중인 차시를 이용하여 문제그룹 ID 구해서 grp 구하기-->
    <select id="userDuplicationExamAnotherTeam" resultType="int">
        SELECT
            "TR_USER_GRP"
        FROM
            "TN_TRAIN_EXAMRESULT_TEAM"
        WHERE
            "TR_EXAM_GRPID" =
            (
            SELECT
                "TR_EXAM_GRPID"
            FROM
                "TN_TRAIN_EXAMRESULT"
            WHERE
                "TR_USER_ID" = #{id} and
                "TR_NUM" =
                (
                select
                    "TR_NUM"
                from
                    "TN_TRAIN_MGMT"
                where
                    "TR_MGMT_STATE" = 1
                )
            LIMIT 1
            )
        LIMIT 1
    </select>
</mapper>